<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:Orientation="vertical"
    tools:context=".Signup">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/arrow"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="34dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="223dp"
        android:layout_height="225.06dp"
        app:srcCompat="@drawable/bhoj"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="81dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="Name"
        android:hintTextColor="@color/hint_color"
        android:padding="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints,DuplicateClickableBoundsCheck"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="357dp"
        android:background="@drawable/rectangle"/>


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:hintTextColor="@color/hint_color"
        android:padding="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="439dp"
        android:background="@drawable/rectangle"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="@string/password"
        android:hintTextColor="@color/hint_color"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="601dp"
        android:background="@drawable/rectangle"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="Password"
        android:hintTextColor="@color/black"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="683dp"
        android:background="@drawable/rectangle"/>

    <EditText
        android:id="@+id/etPhoneno"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="524dp"
        android:background="@drawable/rectangle"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:text="Sign-Up"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TextSizeCheck"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="790dp">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>